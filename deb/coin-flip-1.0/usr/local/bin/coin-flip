# Function to show spinning animation
animate_spin() {
  echo "Flipping the coin..."
  sleep 0.5

  for i in {0..19}; do
    clear
    echo "${coin_art[$((i % ${#coin_art[@]}))]}"
    sleep 0.1
  done
}

# Function to display final result
show_result() {
  clear
  result=$((RANDOM % 2))
  if [ "$result" -eq 0 ]; then
    echo "${head_coin[0]}"
    echo -e "\n🪙 \e[1;33mIt's HEADS!\e[0m"
  else
    echo "${tail_coin[0]}"
    echo -e "\n🪙 \e[1;34mIt's TAILS!\e[0m"
  fi
}

# Run the coinflip
animate_spin
show_result

